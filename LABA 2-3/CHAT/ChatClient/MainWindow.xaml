<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="534.585" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="0,0,246,0">
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="30" Margin="143,15,-234,0" TextWrapping="Wrap" Text="Имя пользователя" VerticalAlignment="Top" Width="372"/>
        <Button  x:Name="bConDisc" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Height="33" Margin="10,10,0,0" VerticalAlignment="Top" Width="112"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="252" Margin="10,50,-234,0" VerticalAlignment="Top" Width="505"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="103" Margin="143,307,-234,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="372"/>
        <Button  x:Name="bSend" Click="Button_send" Content="Send" HorizontalAlignment="Left" Margin="10,307,0,0" VerticalAlignment="Top" Width="128" Height="103"/>

    </Grid>
</Window>
